{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Debug",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "env": {},
            "args": [
                "-address=:3000"
            ]
        },
        {
            "name": "Launch Debug TLS",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "env": {},
            "args": [
                "-address=:3000",
                "-cert=private/cert.pem",
                "-key=private/key.pem"
            ]
        },
        {
            "name": "Attach Debug",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "${workspaceFolder}",
            "port": 2340,
            "host": "127.0.0.1"
        },
        {
            "name": "Launch Edge against localhost",
            "type": "pwa-msedge",
            "request": "launch",
            "url": "http://localhost:3000/",
            "webRoot": "${workspaceFolder}"
        }
    ]
}