{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Debug",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/default",
            "cwd": "${workspaceFolder}",
            "env": {
                "PORT": "3000"
            }
        },
        {
            "name": "Attach Debug",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "${workspaceFolder}",
            "port": 2340,
            "host": "127.0.0.1"
        },
        {
            "name": "Launch Edge against localhost",
            "type": "msedge",
            "request": "launch",
            "url": "http://localhost:3000/",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Launch Chrome against localhost",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000/",
            "webRoot": "${workspaceFolder}"
        }
    ]
}